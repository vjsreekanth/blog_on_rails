

<div class="card-deck">
  <div class="row mx-md-n5">
    <% @posts.each do |post| %>
    
    <div class="col col-lg-4 col-md-6 col-sm-12 px-md-5 mb-2">
        <div class="card overflow-hidden" style="height:100px; width:25rem">
          <div class="card-body">
            <h5 class="card-title mb-2"> <%= link_to post.title, post_path(post) %> </h5>
            <p class="card-text overflow-ellipsis"> <%= post.body %> </p>
          </div>
        </div>
    </div>
      <% end%>
  </div>
</div>