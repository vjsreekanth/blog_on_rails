<p>Users</p>

<table class="table table-hover">
  <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
    </tr>
   </thead>
    <% @users.each do |user| %>
     <% if !user.is_admin %>
      
  <tbody>
        <tr>
        <th scope="row"> <%= (@users.index(user)) + 1 %> </th>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        </tr>
  </tbody>
    <% end %>
  <% end %>
</table>